                app:cardUseCompatPadding="true">-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="248dp"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@mipmap/o_my_bg"

                >


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_bar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:visibility="visible">


                <TextView
                    android:id="@+id/text_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:text="我的"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_size"
                    android:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/img_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:padding="@dimen/margin"
                    android:src="@mipmap/sz_icon"
                    android:visibility="visible" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginRight="@dimen/margin_15"
                android:background="@drawable/new_order_bg_white"
                android:gravity="center"
                android:orientation="vertical">


                <com.ltqh.qh.view.CircleImageView
                    android:id="@+id/img_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/user_icon" />


                <LinearLayout
                    android:id="@+id/stay_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_head"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="登录/注册"
                        android:textColor="@color/text_maincolor"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/text_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="11"
                        android:text="~~"
                        android:textColor="@color/text_maincolor"
                        android:textSize="16sp"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/stay_login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin"
                    android:background="@drawable/new_order_bg_mainclor"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/margin"
                    android:paddingTop="5dp"
                    android:paddingRight="@dimen/margin"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="11"
                        android:text="~~"
                        android:textColor="@color/text_maincolor"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/edit"
                        android:drawablePadding="5dp"

                        android:text="设置签名"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewheight"
            android:background="@color/background_maincolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <!--<android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_marginRight="@dimen/margin_15"
                    android:background="@drawable/new_order_bg_white"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="点击登录"
                            android:textColor="@color/text_maincolor"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="11"
                                android:text="~~"
                                android:textColor="@color/text_secondcolor"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="去修改>>"
                                android:textColor="@color/maincolor"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/img_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="5dp"
                        android:src="@mipmap/my_edit"
                        android:visibility="gone" />
                </RelativeLayout>
                <!--  </android.support.v7.widget.CardView>-->
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_15"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/margin_15"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/layout_mymessage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_menu_height"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radius_shape_background"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:drawableLeft="@mipmap/my_icon1"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="我的消息"
                        android:textColor="@color/text_maincolor"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:src="@mipmap/arrow" />


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/home_line"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/layout_person"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_menu_height"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radius_shape_background"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:drawableLeft="@mipmap/my_icon5"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="个人资料"
                        android:textColor="@color/text_maincolor"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/home_line"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/layout_service"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_menu_height"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radius_shape_background"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:drawableLeft="@mipmap/my_icon2"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="意见反馈"
                        android:textColor="@color/text_maincolor"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/home_line"
                    android:visibility="visible" />


                <RelativeLayout
                    android:id="@+id/layout_change"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_menu_height"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radius_shape_background"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:drawableLeft="@mipmap/my_icon3"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="修改密码"
                        android:textColor="@color/text_maincolor"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:src="@mipmap/arrow" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/home_line"
                    android:visibility="visible" />


                <RelativeLayout


                    android:id="@+id/layout_delete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/my_menu_height"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_radius_shape_background"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/text_hc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:drawableLeft="@mipmap/my_icon4"
                        android:drawablePadding="10dp"
                        android:gravity="center"
                        android:text="清除缓存"
                        android:textColor="@color/text_maincolor"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="0.0M"
                        android:textColor="@color/maincolor"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/home_line"
                    android:visibility="visible" />


                <RelativeLayout
                    android:id="@+id/layout_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_shape_background"

                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_15"
                        android:drawableLeft="@mipmap/my_icon6"
                        android:drawablePadding="10dp"
                        android:gravity="center"

                        android:text="关于我们"
                        android:textColor="@color/text_maincolor"
                        android:textSize="15sp"
                        android:visibility="visible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_15"
                        android:src="@mipmap/arrow" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/home_line"
                    android:visibility="gone" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:id="@+id/layout_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/color_fc"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="8dp"
                    android:text="退出登录"
                    android:textColor="@color/text_secondcolor"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <!-- </android.support.v7.widget.CardView>-->
    <!-- </ScrollView>-->

</ScrollView>
</RelativeLayout>