<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">
<!--    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="@dimen/cardelevation"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">-->
    <LinearLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="@dimen/margin_5"
        android:background="@drawable/new_order_bg_white"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_zhangdie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="黄金"
            android:layout_marginTop="@dimen/margin"
            android:textColor="@color/text_maincolor"
            android:textSize="14sp"
            android:textStyle="bold"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1288"
                    android:textColor="@color/text_maincolor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="monospace"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_low"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:text="--"
                        android:textSize="12sp"
                        android:typeface="monospace"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_high"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="--"
                        android:textSize="12sp"
                        android:typeface="monospace" />


                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当日涨跌幅"
                    android:textColor="@color/text_secondcolor"
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />



            </LinearLayout>



        </LinearLayout>


    </LinearLayout>
   <!-- </android.support.v7.widget.CardView>-->
    <View
        android:id="@+id/stay_line"
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:background="@color/home_line" />


</LinearLayout>